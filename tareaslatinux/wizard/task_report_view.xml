<?xml version="1.0" encoding="UTF-8"?>

<openerp>
<data>

    <!--  =========== VIEWS =========== -->
    <record model="ir.ui.view" id="view_task_report_wizard">
        <field name="name">Report</field>
        <field name="model">lt.task.report.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form col="4" string="Reporte Tareas">
                <field invisible="1" name="state"/>
                <field name="report_file" attrs="{'readonly': [('state', '=', 'fin')]}" on_change="onchange_report_file(report_file)" colspan="0"/>
                <field name="detailed" states="choose"/>
                <field name="date_min" states="choose" colspan="2"/>
                <field name="date_max" states="choose" colspan="2"/>
                <newline/>
                <field name="target_ids" states="choose" colspan="4">
	                <tree string="Filtar Objetivos">
	                    <field name="name" readonly="1"/>
                        <field name="description" readonly="1"/>
                        <field name="progress" readonly="1"/>
	                </tree>
                </field>
                <newline/>
                <button special="cancel" icon="gtk-cancel" string="Cancelar" states="choose" colspan="0"/>
                <button type="object" name="create_task_report" icon="gtk-go-forward" string="Crear" states="choose" colspan="0"/>
                <button type="object" name="open_report" icon="gtk-go-forward" string="Abrir Reporte" states="fin" colspan="0"/>
                <button special="cancel" icon="gtk-ok" string="Cerrar Asistente" states="fin" colspan="0"/>
            </form>
        </field>
    </record>
		
	<!--  =========== ACTIONS =========== -->   
    <record model="ir.actions.act_window" id="action_report_task_1">
        <field name="name">Report</field>
        <field name="res_model">lt.task.report.wizard</field>
        <field name="view_type">form</field>
	    <field name="view_id" ref="view_task_report_wizard"/>
        <field name="target">new</field>
    </record>

    <!--  =========== MENU ITEMS =========== -->
    <menuitem id="menu_report_task_1" 
              name="Reporte Tareas"
              action="action_report_task_1"
              parent="lt_tarea_menu_4"
              sequence="1000" 
              icon="STOCK_PRINT"/>

</data>
</openerp>
