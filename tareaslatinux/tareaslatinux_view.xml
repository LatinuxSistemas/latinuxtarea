<?xml version="1.0" encoding="UTF-8"?>
<openerp>
<data>
    
    <!-- ########### -->
    <!-- lt recursos -->
    <!-- ########### -->

    <record model="ir.ui.view" id="lt_recursos_form_view">
    	<field name="name">lt.recursos.form.view</field>
		<field name="model">lt.recurso</field>
		<field name="type">form</field>
		<field name="arch" type="xml">
			<form string="TyM Resources">   	 		  
    	        <field name="name" on_change="name_change(name,quantity)"/>
                <field name="quantity" on_change="name_change(name,quantity)"/>
			</form>
		</field>
    </record>
    
    <record model="ir.ui.view" id="lt_recursos_tree_view">
    	<field name="name">lt.recursos.tree.view</field>
		<field name="model">lt.recurso</field>
		<field name="type">tree</field>
		<field name="arch" type="xml">
			<tree string="TyM Resources tree">
   	 		    <field name="name"/>
			    <field name="quantity"/>
                <field name="resource_price"/>
			</tree>
		</field>
    </record>

    <record id="action_lt_recursos_form" model="ir.actions.act_window" >
        <field name="name">LT Resources</field>
    	<field name="type">ir.actions.act_window</field>
        <field name="res_model">lt.recurso</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
	    <field name="view_id" ref="lt_recursos_form_view"/>
    	<field name="target">new</field>	
    </record>
    
    <!-- ######### -->
    <!-- lt tareas -->
    <!-- ######### -->

    <record model="ir.ui.view" id="lt_tarea_calendar_view">
		<field name="name">lt.tarea.calendar</field>
		<field name="model">lt.tarea</field>
        <field name="type">calendar</field>
        <field name="priority" eval="2"/>
		<field name="arch" type="xml">
            <calendar string="TyM Task" color="target_id" day_length="12" date_start="date_deadline" date_delay='delay'>
                <field name="name"/>
            </calendar>
	    </field>
    </record>

    <record model="ir.ui.view" id="lt_tarea_tree_view">
		<field name="name">lt.tarea.tree</field>
		<field name="model">lt.tarea</field>
		<field name="type">tree</field>
		<field name="arch" type="xml">
		    <tree colors="grey:state in ('cancelled','done');blue:state == 'pending';red:date_deadline and (date_deadline&lt;current_date) and (state in ('draft','pending','open'))" string="lt Tasks">
		   	    <field name="name" select="1" string="Task Name"/>
		   	    <field name="user_id"/>
                <field name="date"/>
                <field name="date_finish"/>
			    <field name="date_deadline" invisible="context.get('deadline_visible',True)"/>
                <field name="order_by"/>
                <field name="reference"/>
			    <field name="description"/>
    			<field name="state"/>
	    		<button name="do_open" states="pending,draft,done" string="Start Task" type="object" icon="gtk-media-play" help="For changing to open state" invisible="context.get('set_visible',False)"/>
		    </tree>
		</field>
    </record>    
    
    <record model="ir.ui.view" id="lt_tarea_form_view">
    	<field name="name">lt.tarea.form</field>
		<field name="model">lt.tarea</field>
		<field name="priority">2</field>
		<field name="type">form</field>
		<field name="arch" type="xml">
		<form string="TyM Task">
		<group>
			 <field name="user_id"/>
			 <field name="name" string="Task Name"/>
			 <field name="date"/>
             <field name="date_finish"/>  
             <field name="date_cancel" states='cancelled'/>  
			 <field name="date_deadline" attrs="{'readonly':[('state','in',['done', 'cancelled'])]}"/>
             <field name="order_by"/>
             <field name="reference"/>
			 <field name="target_id"/>
             <field name="tarea_amount_total"/>
			 <field colspan="4" name="description" nolabel="1" attrs="{'readonly':[('state','=','done')]}" widget="text_wiki" rowspan="1"/>
		</group>
		<notebook colspan="4">
	        <page string="TyM Resources">
	            <field name="resource_ids" nolabel="1" colspan="4">
	              	<tree string="Resource lines">
	                    <field name="name"/>
                        <field name="quantity"/>
                        <field name="resource_price"/>
	                </tree>
	            </field>
	       	</page>
	    </notebook>
		<newline/>
		    <group col="6">
                <field name="state" widget="statusbar" statusbar_visible="draft,open,done" statusbar_colors='{"pending":"blue"}'
                select="1" colspan="0"/>
                <button name="%(action_report_task_1)d" type="action" icon="gtk-execute" string="Print Report" colspan="2"/>
	            <button name="do_cancel" states="draft,open,pending" string="Cancel" type="object" icon="gtk-cancel" colspan="1"/>
        	    <button name="do_draft" states="open,pending" string="Draft" type="object" icon="gtk-indent" colspan="3"/>
	            <button name="do_open" states="draft,pending" string="Start Task" type="object" icon="gtk-media-play" colspan="4"/>
	            <button name="do_done" states="open,pending" string="Finish Task" type="object" icon="gtk-media-play" colspan="5"/>
 		    </group>
		</form>					
	</field>
    </record>

    <record model="ir.actions.act_window" id="action_lt_tarea_tree">
        <field name="name">LT Tarea</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">lt.tarea</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form,calendar</field>        
    </record>
       
    <!-- ########## -->
    <!-- lt targets -->
    <!-- ########## -->
    
    <record model="ir.ui.view" id="lt_target_tree_view">
		<field name="name">lt.target.tree</field>
		<field name="model">lt.target</field>
		<field name="type">tree</field>
		<field name="arch" type="xml">
		<tree string="TyM Target">
		    <field name="name" select="1"/>			
			<field name="task_ids" invisible="1"/>
			<field name="partner_id" string="Customer"/>	
			<field name="description" invisible="1"/>
                <!--<field name="file_ids"/>-->
			<field name="progress"/>
		</tree>
		</field>
    </record>    
    
    <record model="ir.ui.view" id="lt_target_form_view">
		<field name="name">lt.target.form</field>
		<field name="model">lt.target</field>
		<field name="type">form</field>
		<field name="arch" type="xml">
	       	<form string="TyM Target" >
                <field name="name" select="1" colspan="4"/>
		        <field name="partner_id" string="Customer" widget="selection" on_change="onchange_partner(partner_id)" colspan="2"/>
		        <field name="location" colspan="2"/>
		        <field name="description" colspan="4"/>		
                <field name="file_ids" colspan="4" nolabel="1">
                    <tree string="Attachments"> 
                        <field name="name"/>
                        <!--<field name="res_name"/>
                        <field name="store_fname"/>
                        <field name="description"/>-->
                        <field name="datas_fname"/>
                        <!--<field name="url"/>-->
                    </tree>
                </field>
			    <field name="task_ids" invisible="0" readonly="1" nolabel="1" colspan="4" >
				    <tree colors="grey:state in ('cancelled');blue:state =='done';red:state in ('draft','pending','open')" string="Associated Tasks">
                       	<field name="date" />
                       	<field name="name" />	                       			
                       	<field name="date_deadline" />
                        <field name="state" />
                	</tree>
	            </field>
	            <field name="progress" widget="progressbar" colspan="2"/>
           	</form>
		</field>
    </record>

    <record model='ir.actions.act_window' id='action_lt_target_tree'>
        <field name='name'>LT Objetivos</field>
        <field name='type'>ir.actions.act_window</field>
        <field name='res_model'>lt.target</field>
        <field name='view_type'>form</field>
        <field name='view_mode'>tree,form</field>
    </record>
    
    <!-- #### -->
    <!-- MENU -->
    <!-- #### -->
    
    <menuitem id="lt_tarea_menu" sequence="10" name="TyM"/>
    <menuitem id="lt_tarea_menu_1" parent="lt_tarea_menu" sequence="10" name="TyM Task"/>
    <menuitem id="lt_tarea_menu_4" parent="lt_tarea_menu" sequence="9" name="TyM Target"/>
    <menuitem id='lt_tarea_menu_3' sequence='1' name='TyM Targets' parent='lt_tarea_menu_4' action='action_lt_target_tree'/>
    <menuitem id="lt_tarea_menu_2" action="action_lt_tarea_tree" parent="lt_tarea_menu_1" sequence="2" name="TyM Task"/>

</data>
</openerp>
